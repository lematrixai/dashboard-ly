rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to upload files to posts directory
    match /posts/{fileName} {
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024 // 50MB max file size
        && request.resource.contentType.matches('image/.*|video/.*'); // Only images and videos
    }
    
    // Allow users to upload profile pictures
    match /profiles/{userId}/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB max file size
        && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}
